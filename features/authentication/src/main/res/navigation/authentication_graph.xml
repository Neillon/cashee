<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.neillon.cashee.authentication.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_loginWithEmailFragment"
            app:destination="@id/loginWithEmailFragment" />
        <action
            android:id="@+id/action_loginFragment_to_loginProcessingFragment"
            app:destination="@id/loginFirebaseProcessFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.neillon.cashee.authentication.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.neillon.cashee.authentication.ui.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/loginWithEmailFragment"
        android:name="com.neillon.cashee.authentication.ui.login.with_email.LoginWithEmailFragment"
        android:label="LoginWithEmailFragment" >
        <action
            android:id="@+id/action_loginWithEmailFragment_to_loginProcessingFragment"
            app:destination="@id/loginFirebaseProcessFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFirebaseProcessFragment"
        android:name="com.neillon.cashee.authentication.ui.login.processing.LoginFirebaseProcessFragment"
        android:label="LoginFIrebaseProcessFragment">
        <action
            android:id="@+id/action_loginProcessingFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

</navigation>